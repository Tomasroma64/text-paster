{
    "name": "Print Text",
    "manifest_version": 2,
    "description": "Shortcut to writing long text",
    "version": "2.0.0.0",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Load EmojiSelector"
    },

    "icons": {
        "128": "icon.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "commands": {
        "scroll": {
            "suggested_key": {
                "default": "Ctrl+Space"
            },
            "description": "Scroll Function"
        }
    }
}